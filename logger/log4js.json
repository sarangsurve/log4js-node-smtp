{
    "appenders": {
        "stdout": {
            "type": "stdout",
            "layout": {
                "type": "pattern",
                "pattern": "%d %p %c %m%n"
            }
        },
        "multi": {
            "type": "multiFile",
            "layout": {
                "type": "pattern",
                "pattern": "%d %m"
            },
            "base": "logs/",
            "property": "categoryName",
            "flags": "w",
            "pattern": "yyyy-MM-ddThh:00:00",
            "compress": false,
            "alwaysIncludePattern": false,
            "backups": 200,
            "extension": ".log",
            "maxLogSize": 209715200,
            "keepFileExt": true
        },
        "email1": {
            "type": "@log4js-node/smtp",
            "SMTP": {
                "host": "smtp.gmail.com",
                "port": 587,
                "auth": {
                    "user": "senderEmailAddress@gmail.com",
                    "pass": "senderEmail@Password"
                }
            },
            "recipients": "recipientEmailAddress1@hostname",
            "subject": "Error logs"
        },
        "email2": {
            "type": "@log4js-node/smtp",
            "SMTP": {
                "host": "smtp.hostaddress",
                "port": 587,
                "auth": {
                    "user": "senderEmail@Address",
                    "pass": "senderEmail@Password"
                }
            },
            "recipients": "recipientEmailAddress2@hostname",
            "subject": "Error logs"
        }
    },
    "categories": {
        "default": {
            "appenders": ["multi","stdout"],
            "level": "info"
        },
        "error": {
            "appenders": ["multi","stdout","email1","email2"],
            "level": "error"
        }
    }
}